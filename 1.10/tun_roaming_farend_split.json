{
    "log": {
        "disabled": false,
        "level": "warn",
        "output": "box.log",
        "timestamp": true
    },
    "ntp": {
        "enabled": true,
        "server": "time.google.com",
        "server_port": 123,
        "interval": "30m",
        "detour": "proxy"
    },
    "experimental": {
        "cache_file": {
            "enabled": true,
            "store_fakeip": true,
            "store_rdrc": false
        },
        "clash_api": {
            "external_controller": "127.0.0.1:9090",
            "external_ui": "dashboard",
            "external_ui_download_detour": "proxy",
            "default_mode": "global"
        }
    },
    "dns": {
        "servers": [
            {
                "tag": "dns_proxy",
                "address": "https://1.1.1.1/dns-query",
                "detour": "proxy"
            },
            {
                "tag": "block",
                "address": "rcode://success"
            },
            {
                "tag": "dns_direct",
                "address": "https://1.1.1.1/dns-query",
                "detour": "direct"
            }
        ],
        "rules": [
            {
                "outbound": "any",
                "server": "dns_proxy"
            },
            {
                "clash_mode": "global",
                "server": "dns_proxy"
            },
            {
                "clash_mode": "direct",
                "server": "dns_direct"
            }
        ],
        "strategy": "prefer_ipv4",
        "final": "dns_proxy"
    },
    "inbounds": [
        {
            "tag": "tun-in",
            "type": "tun",
            "interface_name": "singbox",
            "address": [
                "172.19.0.1/30",
                "fdfe:2952:8964::1/126"
            ],
            "stack": "mixed",
            "auto_route": true,
            "strict_route": true,
            "sniff": true
        }
    ],
    "outbounds": [
        {
            "tag": "direct-out",
            "type": "direct"
        },
        {
            "tag": "dns-out",
            "type": "dns"
        },
        {
            "tag": "proxy",
            "type": "selector",
            "outbounds": [
                "direct-out",
                "{all}"
            ]
        },
        {
            "tag": "global",
            "type": "selector",
            "outbounds": [
                "direct-out",
                "proxy"
            ],
            "default": "proxy"
        }
    ],
    "route": {
        "rules": [
            {
                "type": "logical",
                "mode": "or",
                "rules": [
                    {
                        "protocol": "dns"
                    },
                    {
                        "port": 53
                    }
                ],
                "outbound": "dns-out"
            },
            {
                "clash_mode": "global",
                "outbound": "global"
            },
            {
                "clash_mode": "direct",
                "outbound": "direct-out"
            }
        ]
    }
}